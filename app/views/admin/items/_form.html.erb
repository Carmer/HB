  <%= form_for([:admin, @item]) do |f| %>
  <%= f.text_field :title, placeholder: "Item title"  %>
  <%= f.text_field :description, placeholder: "Item description" %>
  <%= f.text_field :price, placeholder: "Price" %>
  <%= f.collection_check_boxes(:categories, Category.all, :id, :name) %>
  <%= f.select :status, options_for_select(%w(active retired)), selected: @item.status %>
  <%= f.label :image %><br>
  <%= f.file_field :image %>
  <%= f.submit "Submit Item" %>
<% end %>
