  <%= form_for([:admin, @item]) do |f| %>
  <%= f.text_field :title, placeholder: "Item title"  %>
  <%= f.text_field :description, placeholder: "Item description" %>
  <%= f.text_field :price, placeholder: "Price" %>
  <%= f.collection_check_boxes(:category_ids, @categories, :id, :name) %>
  <%= f.label :status %>
  Retired<%= f.radio_button :status, false  %>
  Active<%= f.radio_button :status, true  %>
  <%= f.label :image %><br>
  <%= f.file_field :image %>
  <%= f.submit "Submit Item" %>
<% end %>
