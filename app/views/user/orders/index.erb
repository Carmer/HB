<h1>Orders</h1>

<div class="user_orders_list">
<div class="center_div">
<table id="first_table">
    <tr>
      <th>Order_id</th>
      <th>User_id</th>
      <th>Subtotal</th>
      <th>Created_At</th>
      <th>Last_Updated_At</th>
      <th>Status</th>
    </tr>
  <% @orders.each do |order| %>
    <tr>
      <td><%= link_to "#{order.id}", user_order_path(order) %></td>
      <td><%= order.user_id %></td>
      <td><%= order.subtotal %></td>
      <td><%= order.created_at %></td>
      <td><%= order.updated_at %></td>
      <td><%= order.status %></td>
    </tr>
  <% end %>
</table>
</div>
</div>
</ul>